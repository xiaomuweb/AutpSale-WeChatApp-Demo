/* pages/payment/payment.wxss */
.page-box{
  /* 生成固定定位的元素，相对于浏览器窗口进行定位。 */
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgb(224, 222, 222);
  display: table;
}
.page-content-box{
  width: auto;
  margin: 30rpx;
  padding: 64rpx 30rpx;
  background-color: #fff;
  text-align: center;
  font-size: 28rpx;
  border-radius: 10px;
}
.page-content-title{
  margin: 10px;
  text-align: center;
  font-size: 15px;
}
.page-content-amount{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  display: inline-block;
  font-size: 78rpx;
  line-height: 1;
}
.page-content-amount::before{
  content: "¥";
  position: absolute;
  font-size: 40rpx;
  top: 8rpx;
  left: -40rpx;
}
.page-content-submitbutton{
  height: 50px;
  margin: 20px 5px;
  text-align: center;
  font-size: 20px;
  background: lightgreen;
}
