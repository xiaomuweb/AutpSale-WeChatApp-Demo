/* pages/orderdetail/orderdetail.wxss */
.page-box{
  /* 生成固定定位的元素，相对于浏览器窗口进行定位。 */
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgb(224, 222, 222);
  display: flex;
  flex-direction: column;
}
.page-content-box{
  width: 100%;
  height: 100%;
}
.page-code-box{
  width:100%;
  height: 250px;
  background: white;
  display: table;
}
.page-code-content-box{
  width:100%;
  height: 100%;
  display: table-cell;
  vertical-align: middle
}
.page-code-canvas{
    margin: auto;
    width: 150px; 
    height: 150px;
}
.page-goods-list-item{
  margin: 10px;
  height: 70px;
  background: lightpink;
  border-radius: 8px;
}